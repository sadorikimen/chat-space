.chat-main
  .main-header
    .main-header__left-box
      .main-header__left-box__current-group
        = @group.name
      .main-header__left-box__menber-list
        - @group.users.each do |user|
          = user.name
    = link_to 'Edit', edit_group_path(@group.id), class: 'edit-btn'

  .messages
    = render @messages
   
  .form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'new_message', placeholder: 'type a message'
      .input-box
        = f.label :image, class: 'input-box__text' do
          = icon('fas', 'image', class: 'input-box__image')
          = f.file_field :image, class: 'input-box__image__file'
      = f.submit 'Send', class: 'submit-btn'